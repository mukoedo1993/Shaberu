 
  <%- include('includes/header') %>

  <div class="container py-md-5 container--narrow">
  <%- include('includes/flash') %>

  <%- include('includes/profileShared') %>
  
    <div class="list-group">
        <% if(!followers.length) {%>
            <p style="color: brown;">Sad! You have no followers. Try to spread your words! </p>
          <% } %>
        <% followers.forEach(function (follower){ %>
            <a href="/profile/<%= follower.username %>" class="list-group-item list-group-item-action">
                <img class="avatar-tiny" src="<%= follower.avatar %>">
               <%= follower.username %>
              </a>
        <%  })%>
    </div>
  </div>
  
  <%- include('includes/footer') %>